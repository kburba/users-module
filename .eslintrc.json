{
  "env": {
    "es6": true,
    "node": true,
    "commonjs": true
  },
  "extends": ["prettier", "airbnb-base"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2015,
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "linebreak-style": ["warn", "windows"],
    "comma-dangle": "off",
    "quotes": ["warn", "single"],
    "no-multi-assign": "off"
  }
}
